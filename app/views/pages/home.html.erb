<!-- banner -->
<div class="banner">
  <div class="color-box">
    <a href="#bio">
      <div class="center">
        <%= image_tag "logo.svg", alt: "logo Marién Yoga" %>
        <h1>Marién Yoga</h1>
        <div class="slogan">
          <p>Keep it Simple</p>
            <i class="fab fa-pagelines"></i>
          <p>Yoga & Wellness</p>
        </div>
      </div>
    </a>
  </div>
</div>
<div class="container">
  <!-- bio -->
  <div id="bio">
    <div class="card-area">
      <div class="title-line"><h3><%= t 'home.bio' %></h3></div>
      <div class="card-info">
        <div class="content">
          <div class="avatar-center">
            <%= image_tag "avatar3.jpg", alt: "Marién Garcia avatar", class: "avatar-bio"%>
          </div>
          <h4><%= t 'home.bioTitle' %></h4>
          <p><%= t 'home.bioContent_html' %></p>
        </div>
        <div id="teach">
          <div class="title-line"><h3><%= t 'home.teachTitle' %></h3></div>
            <h2><strong><%= link_to "Hatha Yoga", yoga_path(anchor: "hatha") %></strong></h2>
              <p><%= t 'home.introHatha' %> </p>
            <h2><strong><%= link_to "Yoga Nidra", yoga_path(anchor: "nidra") %></strong></h2>
                <p><%= t 'home.introNidra' %> </p>
        </div>
      </div>
    </div>
  </div>

  <!-- students -->
  <div id="students">
    <div class="card-area">
      <!-- <div class="title-line"><h3>students</h3></div> -->
      <div class="container-student">
        <!-- <div class="card-student card-img-a col-xs-10 col-sm-10 col-md-5 col-lg-4 col-xl-4"> -->
        <!-- </div> -->
        <div class="card-student">
          <div class="avatar-student card-img-a"></div>
          <div class="text">
            <p><%= t 'home.student1_html' %></p>
          </div>
        </div>
        <div class="card-student">
          <div class="avatar-student card-img-b"></div>
          <div class="text">
            <p><%= t 'home.student2_html' %></p>
          </div>
        </div>
        <div class="card-student">
          <div class="avatar-student card-img-c"></div>
          <div class="text">
            <p><%= t 'home.student3_html' %></p>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
